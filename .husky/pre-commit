#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."
echo "ğŸ” Current directory: $(pwd)"
echo "ğŸ” Script directory: $(dirname -- "$0")"

# Get the repository root (parent of .husky directory)
REPO_ROOT="$(dirname -- "$0")/.."
echo "ğŸ” Repository root: $REPO_ROOT"

# Change to app directory and run checks
cd "$REPO_ROOT/app"
echo "ğŸ” Changed to app directory: $(pwd)"

# Run linting
echo "ğŸ¨ Running ESLint..."
npm run lint

# Run formatting check
echo "ğŸ’… Checking Prettier formatting..."
npm run format:check

# Run tests
echo "ğŸ§ª Running tests..."
npm test

echo "âœ… All pre-commit checks passed!"
